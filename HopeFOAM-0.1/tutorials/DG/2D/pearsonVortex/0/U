FoamFile
{
    version     0.1;
    format      ascii;
    class       dgVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    inlet
    {
        type            fixedValue;
	value		uniform (0 0 0);
    }

    outlet
    {
	type		fixedGradient;
        gradient        uniform (1 1 0);
    }

    frontAndBackPlanes
    {
        type            empty;
    }
}

